include ../../components/button/index

doctype html
html(lang="en")
    head
        title pageTitle
        style
            include ../login/login.module.scss
    body
        .login_wrapper
            .login_content
                h1.login-title Регистрация
                input(name="first name" class="login_input" placeholder="Имя")
                input(name="second name" class="login_input" placeholder="Фамилия" type="text")
                input(name="phone" class="login_input" placeholder="Телефон" type="text")
                input(name="email" class="login_input" placeholder="Email" type="text")
                input(name="login" class="login_input" placeholder="Логин" type="text")
                input(name="password" class="login_input" placeholder="Пароль" type="password")
                input(name="second_password" class="login_input" placeholder="Повторите пароль" type="password")
                +button("Создать аккаунт", "/", "button_green")
                +button("Войти", "../login/index.html")